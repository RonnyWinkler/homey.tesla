{
    "id": "location",
    "name": {
        "en": "Location & navigation",
        "de": "Standort & Navigation",
        "nl": "Plaats & Navigatie"
    },
    "images": {
        "large": "/drivers/location/assets/images/large.png",
        "small": "/drivers/location/assets/images/small.png"
    },
    "class": "sensor",
    "connectivity": [ "cloud" ],
    "capabilities": [
        "location_last_update",
        "location_name",

        "measure_location_latitude",
        "measure_location_longitude",

        "measure_location_heading",

        "measure_location_distance_from_home"

    ],
    "energy": {
        "batteries": [
            "OTHER"
        ]
    },
    "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices",
            "navigation": {
                "prev": "list_devices"
            }
        }
    ],
    "repair": [
        {
            "id": "select"
        },
        {
            "id": "nearest_suc",
            "navigation": {
                "prev": "select"
            }
        },
        {
            "id": "nearest_dest",
            "navigation": {
                "prev": "select"
            }
        }
    ]
}