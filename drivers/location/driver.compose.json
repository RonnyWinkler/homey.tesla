{
    "id": "location",
    "name": {
        "en": "Location & navigation",
        "de": "Standort & Navigation",
        "nl": "Plaats & Navigatie",
        "fr": "Emplacement et navigation",
        "it": "Posizione e navigazione",
        "sv": "Plats och navigering",
        "no": "Sted og navigasjon",
        "es": "Ubicación y navegación",
        "da": "Placering og navigation",
        "ru": "Местоположение и навигация",
        "pl": "Lokalizacja i nawigacja"
    },
    "images": {
        "large": "/drivers/location/assets/images/large.png",
        "small": "/drivers/location/assets/images/small.png"
    },
    "class": "sensor",
    "connectivity": [ "cloud" ],
    "capabilities": [
        "device_state",

        "location_last_update",
        "location_name",

        "measure_location_latitude",
        "measure_location_longitude",

        "measure_location_heading",

        "measure_location_distance_from_home"

    ],
    "energy": {
        "batteries": [
            "OTHER"
        ]
    },
    "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices",
            "navigation": {
                "prev": "list_devices"
            }
        }
    ],
    "repair": [
        {
            "id": "select"
        },
        {
            "id": "nearest_suc",
            "navigation": {
                "prev": "select"
            }
        },
        {
            "id": "nearest_dest",
            "navigation": {
                "prev": "select"
            }
        },
        {
            "id": "driving_history",
            "navigation": {
                "prev": "select"
            }
        },
        {
            "id": "driving_history_json",
            "navigation": {
                "prev": "driving_history"
            }
        }
    ]
}